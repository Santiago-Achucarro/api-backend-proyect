{{#if errStatus}}
  <div class="w-100 h-100 d-flex justify-content-center align-items-center">
    <div
      class="w-60 h-50 bg-form rounded-4 d-flex justify-content-center align-items-center flex-column shadow p-3 mb-5"
    >
      <h2>Password Recovery</h2>
      <p>{{errMsg}}</p>
    </div>
  </div>
{{else}}
  <div class="w-100 h-100 d-flex justify-content-center align-items-center">
    <div
      class="w-60 h-50 bg-form rounded-4 d-flex justify-content-center align-items-center flex-column shadow p-3 mb-5"
    >
      <h1>Password Recovery</h1>
      <form
        class="d-flex flex-column gap-5 mt-2"
        action="/api/users/reset/{{token}}"
        method="post"
      >
        <input
          class="p-1 py-2 rounded-3 border-0"
          type="password"
          placeholder="Enter new Password"
          autocomplete="new-password"
          name="password"
        />
        <input
          class="p-1 py-2 rounded-3 border-0"
          type="password"
          placeholder="Confirm Password"
          name="confirmPassword"
        />
        <button class="border-0 rounded-2 p-2" type="submit">Enviar</button>
      </form>
      {{#if errMsg}}
        <div class="alert alert-warning" role="alert">
          {{errMsg}}
        </div>
      {{/if}}
    </div>
  </div>
{{/if}}